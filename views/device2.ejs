<!DOCTYPE html>
<html>
<head>
    <title>Smart Secured Home</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <!-- styles -->
    <link href="/stylesheets/styles.css" rel="stylesheet">
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body class="login-bg">
<div class="header">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Logo -->
                <div class="logo">
                    <h1><a href="#">Smart Secured Home</a></h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
  <div class="col-md-6">
    <div id="temperature">


    </div>
  </div>
  <div class="col-md-6">
    <div id="pressure">


    </div>
  </div>
  <div class="col-md-6">
    <div id="humidity">


    </div>
  </div>
  <div class="col-md-6">
    <div id="luminous">


    </div>
  </div>
</div>


<script>

var temp1=[];

var temp2=[];
var temp3=[];
var temp4=[];
var count=0;
<% for(var i=0;i<results.table2.length;i++){%>
  var temp=[];
  var press=[];
  var hum=[];
  var lu=[];

temp.push(count);
temp.push(<%=results.table2[i].temperature%>);
temp1.push(temp);
press.push(count);
press.push(<%=results.table2[i].pressure%>);
temp2.push(press);
hum.push(count);
hum.push(<%=results.table2[i].humidity%>);
temp3.push(hum);
lu.push(count);
lu.push(<%=results.table2[i].lux%>);
temp4.push(lu);
count++;
<%}%>



Highcharts.chart('temperature', {

    title: {
        text: 'Temperature Chart (Degree Celsius)'
    },


    yAxis: {
        title: {
            text: 'Temperature'
        }
    },
    legend: {
        layout: 'vertical',
        align: 'right',
        verticalAlign: 'middle'
    },

    plotOptions: {
        series: {
            pointStart: 1
        }
    },

    series: [{
        name: 'Installation',
        data: temp1
    }

  ]

});

Highcharts.chart('pressure', {

    title: {
        text: 'Barometer Chart (mBar)'
    },


    yAxis: {
        title: {
            text: 'Pressure'
        }
    },
    legend: {
        layout: 'vertical',
        align: 'right',
        verticalAlign: 'middle'
    },

    plotOptions: {
        series: {
            pointStart: 1
        }
    },

    series: [{
        name: 'Installation',
        data: temp2
    }

  ]

});

Highcharts.chart('humidity', {

    title: {
        text: 'Humidity Graph (%rH)'
    },


    yAxis: {
        title: {
            text: 'Humidity'
        }
    },
    legend: {
        layout: 'vertical',
        align: 'right',
        verticalAlign: 'middle'
    },

    plotOptions: {
        series: {
            pointStart: 1
        }
    },

    series: [{
        name: 'Installation',
        data: temp3
    }

  ]

});

Highcharts.chart('luminous', {

    title: {
        text: 'Luxometer Chart (Lux)'
    },


    yAxis: {
        title: {
            text: 'Luminous Intensity'
        }
    },
    legend: {
        layout: 'vertical',
        align: 'right',
        verticalAlign: 'middle'
    },

    plotOptions: {
        series: {
            pointStart: 1
        }
    },

    series: [{
        name: 'Installation',
        data: temp4
    }

  ]

});
</script>

</body>
